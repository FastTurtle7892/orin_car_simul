<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="urdf_tutorial">

    <xacro:include filename="macros.xacro"/>

    <material name="white"><color rgba="1 1 1 1" /></material>
    <material name="blue"><color rgba="0 0 1 1"/></material>
    <material name="black"><color rgba="0 0 0 1"/></material>

    <link name="base_link"></link>

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.1 0 0.05"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.1 0 0.05"/>
            <geometry><box size="0.4 0.2 0.1"/></geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.1 0 0.05"/>
            <geometry><box size="0.4 0.2 0.1"/></geometry>
        </collision>
        <xacro:inertial_box mass="10.0" x="0.4" y="0.2" z="0.1">
            <origin xyz="0.1 0 -0.15" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>
    
    <gazebo reference="chassis">
        <material>Gazebo/White</material>
    </gazebo>

    <xacro:macro name="rear_wheel" params="prefix y_offset dir">
        <joint name="${prefix}_wheel_joint" type="continuous">
            <parent link="base_link"/>
            <child link="${prefix}_wheel"/>
            <origin xyz="-0.14 ${y_offset} 0.05" rpy="${dir*pi/2} 0 0" />
            <axis xyz="0 0 ${-1*dir}"/>
            
            <limit effort="20.0" velocity="50.0"/>
            <dynamics damping="0.1" friction="0.1"/>
        </joint>

        <link name="${prefix}_wheel">
            <visual>
                <geometry><cylinder radius="0.05" length="0.04"/></geometry>
                <material name="blue"/>
            </visual>
            <collision>
                <geometry><cylinder radius="0.05" length="0.04"/></geometry>
            </collision>
            <xacro:inertial_cylinder mass="0.5" length="0.04" radius="0.05">
                <origin xyz="0 0 0" rpy="0 0 0"/>
            </xacro:inertial_cylinder>
        </link>

        <gazebo reference="${prefix}_wheel">
            <material>Gazebo/Blue</material>
            <kp>1000000.0</kp>
            <kd>1.0</kd>
            <mu1>20.0</mu1>
            <mu2>20.0</mu2>
		
        </gazebo>
    </xacro:macro>

    <xacro:rear_wheel prefix="rear_left" y_offset="0.14" dir="-1"/>
    <xacro:rear_wheel prefix="rear_right" y_offset="-0.14" dir="1"/>

    <xacro:macro name="front_steer_wheel" params="prefix y_offset dir">
        <joint name="${prefix}_steer_joint" type="revolute">
            <parent link="base_link"/>
            <child link="${prefix}_steer_link"/>
            <origin xyz="0.14 ${y_offset} 0.05" rpy="0 0 0"/>
            <axis xyz="0 0 1"/>
            
            <limit lower="-0.6" upper="0.6" effort="50.0" velocity="50.0"/>
            <dynamics damping="0.1" friction="0.1"/>
        </joint>
        
        <link name="${prefix}_steer_link">
            <visual>
                <geometry><cylinder radius="0.01" length="0.01"/></geometry>
                <material name="black"/>
            </visual>
            <xacro:inertial_cylinder mass="0.5" length="0.01" radius="0.1">
                <origin xyz="0 0 0" rpy="0 0 0"/>
            </xacro:inertial_cylinder>
        </link>

        <joint name="${prefix}_wheel_joint" type="continuous">
            <parent link="${prefix}_steer_link"/>
            <child link="${prefix}_wheel"/>
            <origin xyz="0 0 0" rpy="${dir*pi/2} 0 0"/>
            <axis xyz="0 0 ${-1*dir}"/>
            
            <limit effort="20.0" velocity="50.0"/>
            <dynamics damping="0.1" friction="0.1"/>
        </joint>
        
        <link name="${prefix}_wheel">
            <visual>
                <geometry><cylinder radius="0.05" length="0.04"/></geometry>
                <material name="blue"/>
            </visual>
            <collision>
                <geometry><cylinder radius="0.05" length="0.04"/></geometry>
            </collision>
            <xacro:inertial_cylinder mass="0.5" length="0.04" radius="0.05">
                <origin xyz="0 0 0" rpy="0 0 0"/>
            </xacro:inertial_cylinder>
        </link>

        <gazebo reference="${prefix}_wheel">
            <material>Gazebo/Blue</material>
            <kp>1000000.0</kp>
            <kd>1.0</kd>
            <mu1>20.0</mu1>
            <mu2>20.0</mu2>
			
        </gazebo>
    </xacro:macro>

    <xacro:front_steer_wheel prefix="front_left" y_offset="0.14" dir="-1"/>
    <xacro:front_steer_wheel prefix="front_right" y_offset="-0.14" dir="1"/>

    <xacro:include filename="gazebo.xacro"/>
	<joint name="laser_joint" type="fixed">
        <parent link="base_link"/>
        <child link="laser_frame"/>
        <origin xyz="-0.1 0 0.2" rpy="0 0 0"/>
    </joint>

    <link name="laser_frame">
        <visual>
            <geometry>
                <cylinder radius="0.03" length="0.03"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03" length="0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.03" radius="0.03">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="laser_frame">
        <sensor name="lidar" type="ray">
            <pose> 0 0 0 0 0 0 </pose>
            <visualize>true</visualize>
            <update_rate>40</update_rate> 
            <ray>
                <scan>
                    <horizontal>
                        <samples>720</samples>
                        <resolution>1</resolution>
                        <min_angle>-3.14159</min_angle>
                        <max_angle>3.14159</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.1</min>
                    <max>15.0</max>
                    <resolution>0.01</resolution>
                </range>
                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.001</stddev>
                </noise>
            </ray>
            <plugin name="laser_controller" filename="libgazebo_ros_ray_sensor.so">
                <ros>
                    <argument>~/out:=scan</argument>
                </ros>
                <output_type>sensor_msgs/LaserScan</output_type>
                <frame_name>laser_frame</frame_name>
            </plugin>
        </sensor>
    </gazebo>
   

</robot>
